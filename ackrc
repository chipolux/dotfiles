# Ignore common non-source dirs
--ignore-dir=bin
--ignore-dir=node_modules
--ignore-dir=vendor
--ignore-dir=app-components
--ignore-dir=build
--ignore-dir=tmp

# Add type for powershell files
--type-set=ps:ext:ps1,psm1,psd1

# Add type for qml files
--type-set=qml:ext:qml

# Add type for godot files
--type-set=gd:ext:gd

# Update python type to include pyw files
--type-add=python:ext:pyw

# Update js type to include jsx files
--type-add=js:ext:jsx

# Use less as pager
--pager=less -FX

# Always sort files
--sort-files
